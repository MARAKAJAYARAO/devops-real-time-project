pipeline {
    agent any

    environment {
        IMAGE_NAME = "devops-app"
        IMAGE_TAG  = "v1"
    }

    stages {
        stage('Build Maven') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                docker build -t $IMAGE_NAME:$IMAGE_TAG .
                '''
            }
        }
    }

    post {
        success {
            echo 'CI + Docker Image Build SUCCESS üéâ'
        }
        failure {
            echo 'Pipeline FAILED ‚ùå'
        }
    }
}

